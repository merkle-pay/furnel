{
    debug
}

{$DOMAIN} {
    # API routes
    handle /api/* {
        reverse_proxy api:3000
    }

    # Temporal UI (basic auth protected)
    handle_path /temporal/* {
        basic_auth {
            {$CADDY_ADMIN_USER} {$CADDY_ADMIN_HASH}
        }
        reverse_proxy temporal-ui:8080
    }

    # PgWeb (basic auth protected)
    handle_path /pgweb/* {
        basic_auth {
            {$CADDY_ADMIN_USER} {$CADDY_ADMIN_HASH}
        }
        reverse_proxy pgweb:8081
    }

    # Redirect without trailing slash
    @noSlash {
        path /temporal /pgweb
    }
    redir @noSlash {path}/ permanent

    # Web frontend (default)
    handle {
        reverse_proxy web:3000
    }
}
